<%= form_for(@comment, :html => { :id => "comment-form" }) do |f| %>
    <div class="field">
        <div class="row">
            <div class="col-md-6">
                <%= f.text_field :commenter_name, class:"form-control", placeholder: "your name" %>
            </div>
            
            <div class="col-md-6">
                <%= f.text_field :commenter_email, class:"form-control", placeholder: "your email" %>
            </div>
        </div>
    </div>
    
    <div class="field">
        <%= f.text_area :content, class:"form-control", id: "comment-content", placeholder: "your comment" %>
    </div>
    
    <div class="field">
        <%= f.hidden_field :commentable_id, value: "#{@commentable.id}" %>
    </div>
    
    <div>
        <hr>
    </div>
    
    <div class="actions">
        <%= f.submit "post comment", class:"btn btn-primary btn-block",
            data: { :disable_with => "posting..."} %>
    </div>
<% end %>