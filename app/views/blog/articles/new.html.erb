<section id="new-article">
    <div class="modal fade" id="postPreviewModal" tabindex="-1" role="dialog"
        aria-labelledby="addNewCommentLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">post preview</h5>
                    <button type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                        <span aria-hidden="true">exit preview &times;</span>
                    </button>
                </div>
                <div class="modal-body"></div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <h2>Create a new post</h2>
            <hr>
            <%= render 'form' %>
        </div>
    </div>
</section>